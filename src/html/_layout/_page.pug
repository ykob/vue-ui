block vars

include ../_mixin/_common.pug
include ../_mixin/_svg.pug

-
  var pageTitle = (page.title) ? page.title : 'vue-ui index';

doctype html
html(lang="ja")
  head
    include ./_head.pug
  body
    .l-page(data-page-id=page.id)
      include ./_gh.pug
      block contentFixedBefore
      .l-contents
        h1.c-content-header
          |#{pageTitle}
        block content
      include ./_gf.pug
      block contentFixedAfter
    script(src="/js/main.js")
